{
	"cssvar.files": ["node_modules/open-props/open-props.min.css", "slides/**/app.postcss"],

	// Do not ignore node_modules CSS files, which is ignored by default.
	"cssvar.ignore": [],

	// Add support for autocomplete for these file types.
	"cssvar.extensions": ["css", "postcss", "svelte"],

	"editor.formatOnSave": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"[svelte]": {
		"editor.defaultFormatter": "svelte.svelte-vscode"
	},
	"editor.quickSuggestions": {
		"strings": true
	},
	"editor.tabSize": 2,

	"files.eol": "\n",
	"files.insertFinalNewline": true,
	"files.trimTrailingWhitespace": true,

	"svelte.enable-ts-plugin": true,
	"yaml.schemas": {
		"https://raw.githubusercontent.com/ansible/ansible-lint/main/src/ansiblelint/schemas/ansible.json": "file:///workspace/slides/slides/gitpod-ams/src/routes/%28slides%29/tasks/.gitpod.yml",
		"https://gitpod.io/schemas/gitpod-schema.json": "file:///workspace/slides/slides/gitpod-ams/src/routes/%28slides%29/tasks/code.yml"
	}
}
